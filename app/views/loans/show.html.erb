<p id="notice"><%= notice %></p>
<%if @loans.present?%>
<h1>Monthly Loan Details</h1>
<div class="row">
  <div style="width:25%; float: left;">
  	<h4>Customer Name : <%= @loan.customer_name%></h4>
  	<h4>Loan Amount : <%= @loan.loan_amount%></h4>
  	<h4>Interest Rate : <%= @loan.rate_of_interest %>%</h4>
  	<h4>Disbursement Date : <%= @loan.disbursement_date.strftime("%d/%m/%Y")%></h4>
    <h4>Payment Start Date : <%= @loan.disbursement_date.next_month.beginning_of_month.strftime("%d/%m/%Y") %></h4>
  </div>
  <div style="width:75%; float: right;">
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Start Balance</th>
      <th>Principal</th>
      <th>Interest</th>
      <th>Total Amt</th>
      <th>End Balance</th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
      	<% loan.each do |data| %>
          <td><%= data %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<%end%>

<br>
<%= link_to 'Back', loans_path %>
