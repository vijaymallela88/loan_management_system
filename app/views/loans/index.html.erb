<p id="notice"><%= notice %></p>
<%= link_to 'New Loan', new_loan_path %>
<%if @loans.present?%>
<h1>Loans Details</h1>

<table>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Total Loan Amount</th>
      <th>Interest Rate</th>
      <th>Disbursement Date</th>
      <th>Terms</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.customer_name %></td>
        <td><%= loan.loan_amount %></td>
        <td><%= loan.rate_of_interest %></td>
        <td><%= loan.disbursement_date.strftime("%d/%m/%Y") %></td>
        <td><%= loan.term %></td>
        <td><%= link_to 'EMI Details', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%else%>
<h4>Please create loan for customers</h4>
<%end%>

<br>

<%= link_to 'Back', loans_path %>

<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>